<Page
    x:Class="SportTeamManagementApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SportTeamManagementApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- First Area -->
        <StackPanel Margin="20,20,0,870" HorizontalAlignment="Left" Width="700" VerticalAlignment="Stretch">
            <TextBlock Text="Create team:"/>
            <TextBox x:Name="TeamName" PlaceholderText="Enter text here" FontFamily="Segoe UI"/>
            <Button Content="Submit" Click="CreateTeam"/>
        </StackPanel>

        <!-- Second Area -->
        <StackPanel Margin="21,130,0,751" HorizontalAlignment="Left" Width="699">
            <TextBlock Text="Select a team:"/>
            <ComboBox x:Name="selectteam" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Width="365">
            </ComboBox>
            <Button Content="Submit" Click="SelectTeam"/>
        </StackPanel>

        <StackPanel Margin="21,254,0,629" HorizontalAlignment="Left" Width="699">
            <TextBlock Text="Selected team players:"/>
            <ComboBox x:Name="selectplayer" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Width="365">
            </ComboBox>
            <Button Content="Submit" Click="SelectPlayer"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="297" Margin="750,20,0,0" Width="422">
            <TextBlock Text="Name:" />
            <TextBox x:Name="NameTextBox" />

            <TextBlock Text="Age:" />
            <TextBox x:Name="AgeTextBox" />

            <TextBlock Text="Salary:" />
            <TextBox x:Name="SalaryTextBox" />

            <Button Content="Load Data" Click="LoadDataButton_Click" />
        </StackPanel>
    </Grid>



</Page>
