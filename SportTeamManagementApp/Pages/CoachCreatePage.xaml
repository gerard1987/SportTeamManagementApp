<Page
    x:Class="SportTeamManagementApp.Pages.CoachCreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:SportTeamManagementApp"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Define two columns with widths in the ratio of 70% and 30% -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <!-- 70% width -->
            <ColumnDefinition Width="3*"/>
            <!-- 30% width -->
        </Grid.ColumnDefinitions>

        <!-- First section with 70% width -->
        <Grid Grid.Column="0">


            <ContentDialog x:Name="ErrorDialog" Title="Message" PrimaryButtonText="OK">
                <StackPanel>
                    <TextBlock Text="Your message goes here." />
                </StackPanel>
            </ContentDialog>
            <!-- Create Coach Section -->
            <StackPanel VerticalAlignment="Center" x:Name="CreateCoachSection">
                <TextBlock Text="Create Coach" FontSize="20"/>
                <TextBox PlaceholderText="FirstName" Name="CoachFirstName" Margin="10"/>
                <TextBox PlaceholderText="LastName" Name="CoachLastName" Margin="10"/>
                <TextBox PlaceholderText="Age" Name="CoachAge" Margin="10"/>
                <TextBox PlaceholderText="Salary" Name="CoachSalary" Margin="10"/>
                <ComboBox PlaceholderText="Role" Margin="10" x:Name="SoccerCoachRoleComboBox" />

                <Button Content="Save" Click="CreateCoach" Margin="10"/>
                <Button Content="Cancel" Click="Cancel" Margin="10"/>
            </StackPanel>
        </Grid>

        <!-- Second section with 30% width -->
        <Grid Grid.Column="1">
            <!-- Always visible window -->
            <local:Results HorizontalAlignment="Right"/>
            <local:PlayerResults HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        </Grid>
    </Grid>

</Page>
